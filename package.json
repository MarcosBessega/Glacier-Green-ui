{
  "name": "Glacier-Green-ui",
  "theme": "ui",
  "version": "0.2.0",
  "description": "Greenish version of Glacier Dark Theme",
  "keywords": [
    "dark",
    "green",
    "ui"
  ],
  "license": "MIT",
  "repository": "https://github.com/MarcosBessega/Glacier-Green-ui.git",
  "main": "lib/main",
  "engines": {
    "atom": ">0.40.0"
  },
  "devDependencies": {
    "coffeelint": "^1.9.7"
  },
  "configSchema": {
    "fontSize": {
      "title": "Font Size",
      "description": "Atom UI forked for @berlouz glacier-dark-ui (https://atom.io/themes/glacier-dark-ui)",
      "type": [
        "integer",
        "string"
      ],
      "minimum": 8,
      "maximum": 20,
      "default": "Auto"
    },
    "layoutMode": {
      "title": "Layout Mode",
      "description": "In Auto mode, the UI will automatically adapt based on the window size.",
      "type": "string",
      "default": "Auto",
      "enum": [
        "Compact",
        "Auto",
        "Spacious"
      ]
    }
  }
}
